<Window x:Class="test1234.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:test1234.classes"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <l:PercentValueConverter x:Key="percentValueConverter"/>
        <l:UpperToLowerCaseConverter x:Key="UpperCaseConverter"/>
        <l:nullTextValueToDefaultConverter x:Key="NullToTextConverter"/>
        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <!--
        
        Window Background
        
        -->
        <Grid.Background>
            <ImageBrush ImageSource="..\img\background.jpg"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Grid.ColumnSpan="3"
                    Grid.RowSpan="3">
            <Border.Background>
                <LinearGradientBrush EndPoint="0,0" StartPoint="1,0" Opacity="0.2">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.5"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!--
        
        Main List
        
        -->

        <Grid Grid.ColumnSpan="2"
              x:Name="grid_main">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1"
                  Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Visible"
                              HorizontalScrollBarVisibility="Disabled"
                              Grid.ColumnSpan="3">
                    <StackPanel Margin="40 40 40 0">
                        <TextBlock Text="Новинки"
                                       FontSize="50"
                                       Margin="20 0"/>
                        <Separator Background="White"
                                       Margin="20 30"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="18*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Width="40"
                                        Height="40"
                                        Click="Left_Click"
                                        Template="{StaticResource NoMouseOverButtonTemplate}">
                                <Image Source="/img/icons8-go-back-24.png" />
                            </Button>
                            <ListView Name="listview_newItem"
                                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                  Background="{x:Null}"
                                  d:ItemsSource="{d:SampleData ItemCount=20}"
                                  HorizontalAlignment="Center"
                                  BorderThickness="0"
                                  Height="400"
                                  Grid.Column="1">
                                <ListView.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
                                </ListView.Resources>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top">
                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Width="240"
                                              MouseLeftButtonUp="Grid_MouseLeftButtonUp">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="4*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.Resources>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
                                            </Grid.Resources>
                                            <Image Source="{Binding PromoPosterLink}"
                                                   SnapsToDevicePixels="True"
                                                   VerticalAlignment="Top"
                                                   Stretch="Uniform"
                                                   Height="300"
                                                   Width="280"
                                                   HorizontalAlignment="Center"
                                                   Margin="5"/>
                                            <StackPanel DockPanel.Dock="Bottom"
                                                        Orientation="Vertical"
                                                        HorizontalAlignment="Left"
                                                        Margin="0 10 0 0"
                                                       Grid.Row="1">
                                                <TextBlock Text="{Binding Title}"
                                                            TextWrapping="WrapWithOverflow"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxHeight="30"/>
                                                <TextBlock Text="{Binding EnTitle}"
                                                            TextWrapping="WrapWithOverflow"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxHeight="30"
                                                           Foreground="LightGray"/>
                                                <StackPanel Orientation="Horizontal"
                                                            Opacity="0.8">
                                                    <TextBlock Text="{Binding AgeRestriction, Converter={StaticResource NullToTextConverter}, ConverterParameter=ageRest}"
                                                                Margin="5 0 0 0"
                                                                FontWeight="Light"/>
                                                    <TextBlock Text="{Binding WorldPremiereDate, Converter={StaticResource NullToTextConverter}, ConverterParameter=releaseYear}"
                                                                DockPanel.Dock="Bottom"
                                                                FontWeight="Light"
                                                                TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Button Width="40"
                                        Height="40"
                                        FontSize="20"
                                        Click="Right_Click"
                                        Grid.Column="2"
                                    Template="{StaticResource NoMouseOverButtonTemplate}">
                                <Image Source="/img/icons8-circled-right-24.png" />
                            </Button>
                        </Grid>
                        <!--<TextBlock Text="Популярное"
                                       FontSize="50"
                                       Margin="20 0"/>
                        <Separator Background="White"
                                       Margin="20 30"/>
                        <Grid Margin="0 0 0 40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Width="40"
                                        Height="40"
                                        Click="LeftFav_Click">
                                <Image Source="/img/icons8-go-back-24.png" />
                            </Button>
                            <ListView Name="listview_yourItem"
                                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                  Background="{x:Null}"
                                  d:ItemsSource="{d:SampleData ItemCount=20}"
                                  HorizontalAlignment="Center"
                                  BorderThickness="0"
                                  Height="400"
                                  Grid.Column="1">
                                <ListView.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
                                </ListView.Resources>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top">
                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Width="220"
                                          Height="Auto"
                                          MouseLeftButtonUp="Grid_MouseLeftButtonUp"
                                              Grid.Row="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="4*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.Resources>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
                                            </Grid.Resources>
                                            <Image Source="{Binding PromoPosterLink}"
                                                   SnapsToDevicePixels="True"
                                                   VerticalAlignment="Top"
                                                   Stretch="Uniform"
                                                   Height="300"
                                                   Width="280"
                                                   DockPanel.Dock="Top"
                                                   HorizontalAlignment="Center"/>
                                            <StackPanel DockPanel.Dock="Bottom"
                                                        Orientation="Vertical"
                                                        HorizontalAlignment="Left"
                                                        Margin="0 10 0 0"
                                                        Grid.Row="1">
                                                <TextBlock Text="{Binding Title}"
                                                            TextWrapping="WrapWithOverflow"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxHeight="30"/>
                                                <TextBlock Text="{Binding EnTitle}"
                                                            TextWrapping="WrapWithOverflow"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxHeight="30"/>
                                                <StackPanel Orientation="Horizontal"
                                                            Opacity="0.8">
                                                    <TextBlock Text="{Binding AgeRestriction, Converter={StaticResource NullToTextConverter}, ConverterParameter=ageRest}"
                                                                Margin="5 0 0 0"
                                                                FontWeight="Light"/>
                                                    <TextBlock Text="{Binding WorldPremiereDate, Converter={StaticResource NullToTextConverter}, ConverterParameter=releaseYear}"
                                                                DockPanel.Dock="Bottom"
                                                                FontWeight="Light"
                                                                TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <Button Width="40"
                                        Height="40"
                                        FontSize="20"
                                        Click="RightFav_Click"
                                        Grid.Column="2">
                                <Image Source="/img/icons8-circled-right-24.png" />
                            </Button>
                        </Grid>-->

                        <Separator Background="White"
                                       Margin="20 30"/>
                        <ListView Name="listview_totalItem"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                  Background="{x:Null}"
                                  d:ItemsSource="{d:SampleData ItemCount=20}"
                                  HorizontalAlignment="Center"
                                  HorizontalContentAlignment="Center"
                                  BorderThickness="0"
                                  Grid.Column="1">
                            <ListView.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
                            </ListView.Resources>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Width="1200">
                                    </WrapPanel>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="190"
                                          Height="Auto"
                                          MouseLeftButtonUp="Grid_MouseLeftButtonUp"
                                          Grid.Row="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.Resources>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
                                        </Grid.Resources>
                                        <Image Source="{Binding PromoPosterLink}"
                                                   SnapsToDevicePixels="True"
                                                   VerticalAlignment="Top"
                                                   Stretch="Uniform"
                                                   Height="300"
                                                   Width="280"
                                                   DockPanel.Dock="Top"
                                                   HorizontalAlignment="Center"/>
                                        <StackPanel DockPanel.Dock="Bottom"
                                                        Orientation="Vertical"
                                                        HorizontalAlignment="Left"
                                                        Margin="0 10 0 0"
                                                        Grid.Row="1">
                                            <TextBlock Text="{Binding Title}"
                                                            TextWrapping="WrapWithOverflow"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxHeight="30"/>
                                            <TextBlock Text="{Binding EnTitle}"
                                                            TextWrapping="WrapWithOverflow"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxHeight="30"/>
                                            <StackPanel Orientation="Horizontal"
                                                            Opacity="0.8">
                                                <TextBlock Text="{Binding AgeRestriction, Converter={StaticResource NullToTextConverter}, ConverterParameter=ageRest}"
                                                                Margin="5 0 0 0"
                                                                FontWeight="Light"/>
                                                <TextBlock Text="{Binding WorldPremiereDate, Converter={StaticResource NullToTextConverter}, ConverterParameter=releaseYear}"
                                                                DockPanel.Dock="Bottom"
                                                                FontWeight="Light"
                                                                TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid x:Name="grid_top"
                  Grid.ColumnSpan="4"
                  Background="Black"
                  Opacity="0.9"
                  Grid.Row="0">
                <DockPanel>
                    <Button x:Name="btn_burgeropen"
                            HorizontalAlignment="Left"
                            Margin="30 0"
                            BorderThickness="0"
                            Background="{x:Null}"
                            Height="40"
                            Width="40"
                            Click="btn_burgeropen_сlick"
                            DockPanel.Dock="Left">
                        <Image Source="/img/icons8-menu-50.png"/>
                    </Button>
                    <StackPanel Orientation="Horizontal"
                                Margin="30 20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Border BorderThickness="2"
                                BorderBrush="White"
                                CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="button_searchDiscardValue"
                                        Visibility="Collapsed"
                                        Click="button_searchDiscardValue_Click">
                                    <Image Source="/img/icons8-close-50.png" 
                                           Height="30"
                                           Margin="5"/>
                                </Button>
                                <TextBox x:Name="textbox_searchBar"
                                         Width="600"
                                         MaxLines="1"
                                         MaxLength="50"
                                         BorderThickness="0"
                                         TextChanged="textbox_searchBar_TextChanged"/>
                                <Button Name="btn_header_search"
                                        Height="40"
                                        Width="40"
                                        Margin="5"
                                        Click="btn_header_search_сlick"
                                        Template="{StaticResource NoMouseOverButtonTemplate}">
                                    <Image Source="/img/icons8-search-50.png"/>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Grid>
        
        <!--
        
        BurgerMenu
        
        -->
        <Border x:Name="borderBurger"
                Grid.RowSpan="2"
                CornerRadius="0 10 10 0"
                Background="Black"
                Visibility="Collapsed"
                Panel.ZIndex="0">
            <Grid x:Name="GridBurger">
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" Width="360">
                        <Button x:Name="button_closeBurgerMenu"
                                Height="40"
                                Width="40"
                                Click="button_closeBurgerMenu_Click"
                                Margin="30 30 0 0">
                            <Image Source="/img/icons8-close-50.png" />
                        </Button>
                        <StackPanel Orientation="Horizontal"
                                    Height="40"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                                    Margin="0 0 30 0"
                                    MouseLeftButtonUp="button_user_Click">
                            <TextBlock x:Name="textblock_login"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Text=""
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                       Margin="10 0"
                                       MaxWidth="150"
                                       TextTrimming="CharacterEllipsis"/>
                            <Border CornerRadius="100"
                                    BorderBrush="White"
                                    BorderThickness="2"
                                    Width="40">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="2"
                                                      Opacity="0.5"
                                                      ShadowDepth="3"/>
                                </Border.Effect>
                                <Border.Background>
                                    <ImageBrush x:Name="image_profile"
                                                Stretch="Fill">
                                        <ImageBrush.ImageSource>
                                            <Binding>
                                                <Binding.TargetNullValue>
                                                    <ImageSource>
                                                        ..\img\icons8-male-user-32.png
                                                    </ImageSource>
                                                </Binding.TargetNullValue>
                                            </Binding>
                                        </ImageBrush.ImageSource>
                                    </ImageBrush>
                                </Border.Background>
                            </Border>
                        </StackPanel>
                    </DockPanel>


                    <StackPanel DockPanel.Dock="Top"
                                Margin="30 20 0 0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 5">
                            <Image Source="/img/icons8-home-page-30.png"
                                   Height="30"
                                   Margin="5"/>
                            <TextBlock x:Name="textblock_mainpagelink"
                                   Text="Главная"
                                   Margin="5"
                                   MouseLeftButtonUp="textblock_mainpagelink_MouseLeftButtonUp"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 5">
                            <Image Source="/img/icons8-movie-24.png"
                                   Height="30"
                                   Margin="5"/>
                            <TextBlock x:Name="textblock_filmlink"
                                   Text="Фильмы"
                                   Margin="5"
                                   MouseLeftButtonUp="textblock_filmlink_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 5">
                            <Image Source="/img/icons8-series-30.png"
                                   Height="30"
                                   Margin="5"/>
                            <TextBlock x:Name="textblock_serieslink"
                                   Text="Сериалы"
                                   Margin="5"
                                   MouseLeftButtonUp="textblock_serieslink_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 5">
                            <Image Source="/img/icons8-heart-filled-48.png"
                                   Height="30"
                                   Margin="5"/>
                            <TextBlock x:Name="textblock_favlink"
                                   Text="Избранное"
                                   Margin="5"
                                   MouseLeftButtonUp="textblock_favlink_MouseLeftButtonUp"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator DockPanel.Dock="Top"
                               BorderBrush="White"
                               BorderThickness="2"
                               Margin="40 20"/>

                    <ListView Name="listview_burgerMenu"
                              d:ItemsSource="{d:SampleData ItemCount=5}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden"
                              Margin="30 0 0 0"
                              DockPanel.Dock="Top"
                              ScrollViewer.CanContentScroll="False"
                              MouseLeftButtonUp="TextBlock_MouseLeftButtonUp">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title, Converter={StaticResource UpperCaseConverter}}"
                                            Foreground="White"
                                            Margin="0 5"
                                            MouseLeftButtonUp="TextBlock_MouseLeftButtonUp">
                                    <TextBlock.Resources>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
                                    </TextBlock.Resources>
                                </TextBlock>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
