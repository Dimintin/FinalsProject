<Window x:Class="test1234.windows.TotalResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test1234.windows"
        mc:Ignorable="d"
        Title="TotalResultWindow" Height="1024" Width="1440"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">
    <Grid ScrollViewer.CanContentScroll="True"
          Panel.ZIndex="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="..\img\Frame 3 (1).jpg"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Grid.ColumnSpan="3"
                    Grid.RowSpan="3">
            <Border.Background>
                <LinearGradientBrush EndPoint="0,0" StartPoint="1,0" Opacity="0.2">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.5"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Grid x:Name="grid_top"
            Grid.ColumnSpan="2"
            Background="Black"
            Opacity="0.9"
            Grid.Row="0">
            <DockPanel>
                <Button x:Name="btn_burgeropen"
            HorizontalAlignment="Left"
            Margin="30 0"
            BorderThickness="0"
            Background="{x:Null}"
            Height="40"
            Width="40"
            Click="btn_burgeropen_сlick"
                        DockPanel.Dock="Left">
                    <Image Source="/img/icons8-menu-50.png"/>
                </Button>
                <StackPanel Orientation="Horizontal"
                Margin="30 20"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                    <Border BorderThickness="2"
                            BorderBrush="White"
                            CornerRadius="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Width="600"
                                MaxLines="1"
                                MaxLength="50"
                                BorderThickness="0"/>
                            <Button Name="btn_header_search"
                                Height="40"
                                Width="40"
                                Margin="5"
                                Click="btn_header_search_сlick">
                                <Image Source="/img/icons8-search-50.png"/>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </DockPanel>

            

        </Grid>
        <Grid Grid.ColumnSpan="10"
                Grid.Row="2"
                x:Name="grid_list">
            <ListView Background="{x:Null}"
                        d:ItemsSource="{d:SampleData ItemCount=20}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                      Padding="85 20 85 0"
                        BorderThickness="0"
                        Name="listview_item"
                        Height="900">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Width="200"
                            Height="400"
                            Margin="0">
                            <DockPanel Margin="10">
                                <Image Source="{Binding Link}"
                                        DockPanel.Dock="Top"
                                        Width="160"
                                        Height="230"/>
                                <WrapPanel DockPanel.Dock="Bottom">
                                    <TextBlock Text="{Binding Title}"
                                                TextWrapping="WrapWithOverflow"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding AgeRestriction, StringFormat={}({0}+) }"
                                                    Margin="5 0 0 0"
                                                    FontWeight="Light"/>
                                        <TextBlock Text="{Binding PremiereYear, StringFormat={} {0}г.}"
                                                    DockPanel.Dock="Bottom"
                                                    FontWeight="Light"
                                                    TextWrapping="Wrap"/>
                                    </StackPanel>
                                </WrapPanel>
                            </DockPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>
